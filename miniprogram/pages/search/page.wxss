/* miniprogram/pages/search/page.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}


.searchbar {
  background: #f5e3e6;
  width: 100%;
  padding: 10px;
  border-bottom: 1px solid #eee;
  
}
.searchbar__input {
  background: #fff;
  padding: 8px;
  width: 90%;
  margin: 0 auto;
  color: #999;
  border-radius: 8px;
}
.hints {
  margin-top: 1em;
  width: 100%;
  box-sizing: border-box;
  padding: 10px;
}
.hint {
  display: inline-block;
  border-radius: 3px;
  padding: 5px;
  border: 2px solid #000;
  color: #000;
  font-weight: bold;
  margin-right: 12px;
  margin-top: 12px;
}