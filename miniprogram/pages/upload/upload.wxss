/* miniprogram/pages/upload/upload.wxss */
.container {
  height: 100vh;
  background: #fff;
  padding: 20px;
}
.actions {
  position: fixed;
  bottom: 20px;
  width: 70px;
  height: 70px;
  color: #fff;
  /* background: rgb(252, 175, 6); */
  /* background-color: #f6f0c4;
  background-image: linear-gradient(315deg, #f6f0c4 0%, #d99ec9 74%); */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.7em;
  line-height: 0;
  border: 2px solid #fff;
  box-shadow: 0 0 6px #eee;
}
.actions image {
  width: 40px;
  height: 40px;
}
.location,
.tags {
  width: 100%;
  margin-bottom: 20px;
}
.location {
  font-weight: bold;
}
.tags textarea {
  height: 100px;
}
.tags textarea::placeholder {
  color: #fff;
}