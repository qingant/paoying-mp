
.tag-picker {
  /* margin-top: 1em; */
  overflow: hidden;
    background: red;
    /* background: linear-gradient(to right, #e67e22 , #f1c40f, #27ae60, #16a085, #3498db, #9b59b6); */
    background-color: #f9d1b7;
    background-image: linear-gradient(35deg, #f9d1b7 0%, #f894a4 74%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1.8;

}

.photo__tags {
  margin-top: 0;
  padding-top: 0; 
  border-top: solid;
  border-color: grey;
  border-width: 1px;
  width: 100%;
}

.tag-picker .tag {
  font-size: .9em;
  margin: 0 .5em 1em 0;
  padding: 5px;
}
.tag-picker-expand {
  padding-right: 15px;
  text-align: right;
}
.tag--active {
  color: #fff;
  background-color: #f9d1b7;
    background-image: linear-gradient(35deg, #f9d1b7 0%, #f894a4 74%);
    -webkit-text-fill-color: #fff;
    line-height: 0;
}



.photolist {
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  /* padding: 20px; */
}
.photo {
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  flex-wrap: nowrap;
  box-sizing: border-box;
  /* border-radius: 10px; */
  box-shadow: 0px -2px 5px #ddd;
  background: #fff;
  overflow: hidden;
  position: relative;
  margin-bottom: 2em;
}
.photo__image navigator{
  width: 100%;
}
