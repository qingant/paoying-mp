.photo__meta__distance {
  font-size: .6em;
}

.photo__author__name,
.photo__meta__place {
  font-size: .7em;
}

.photo__meta__top {
  margin-top: 0;
}
.photo__meta__place{
  margin-left: 20px;
}

.photo__footer {
  bottom: 0;
  padding-left: 20px;
  /* background: linear-gradient(to bottom, rgba(0,0,0,0) 20%, rgba(0,0,0,.8)); */
}

.photo__image,
.photo__image navigator,
.photo__more,
.photo__desc {
  width: 100%;
}

.photo__image navigator {
  display: flex;
  justify-content: center;
  align-items: center;
}
.photo__image image {
  width: 100%;
  min-height: 300px;
}
.photo__desc {
  padding: .5em 0;
  /* color: #fff; */
  font-size: .8em;
}
.photo__footer {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.photo__more {
  display: flex;
  justify-content: space-between;
}

.photo__actions {
  display: flex;
  justify-content: flex-end;
  align-self: flex-end;
  flex: 1;
}
.photo__actions__like {
  display: flex;
}
.photo__likeCount {
  color: #fff;
  font-size: .7em;
  margin-left: .5em;
}
.avatar {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border: 1px solid #e58c8a;
}

.photo__op__like,
.photo__op__comment{
  width: 40px;
  height: 35px;
}
.photo__op__fav{
  width: 40px;
  height: 40px;
}

.photo__operations {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 2px;
  padding-bottom: 0;

}
.photo__op__like {
  position: relative;
  margin-left: 5px; 
}

.photo__op__right {
  /* display: flex; */
  width: 100%;
  display: flex;
  justify-content: flex-end;
  padding-top: .1em;
}


.avatar + .avatar {
  transform: translateX(-30%);
}
.photo__actions__comment {
  padding-left: 20px;
}
.photo__meta {
  width: 100%;
  padding: 2px;
  display: flex;
  align-items: center;
}
.photo__meta__info {
  flex: 1;
}

.photo__meta__operation {
  padding-right: 10px;
}

.photo__author__avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 6px;
  overflow: hidden;

}
.photo__author__avatar image {
  width: 40px;
  height: 40px;
}
.photo__author__name {
  font-size: .7em;
}
.photo__liked {
  font-size: .7em;
  font-weight: bold;
}

.comments {
  margin-top: 10px;
}
.comment__author {
  font-size: .8em;
  font-weight: bold;
}

.comment__text {
  font-size: .8em;
}
