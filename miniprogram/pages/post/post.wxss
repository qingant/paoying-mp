.photo__image,
.photo__image navigator,
.photo__more,
.photo__desc {
  width: 100%;
}
.photo__image navigator {
  display: flex;
  justify-content: center;
  align-items: center;
}
.photo__image image {
  width: 100%;
  min-height: calc(100vh - 150px);
}
.photo__desc {
  padding: .5em 0;
  color: #000;
  font-size: .8em;
}
.photo__footer {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.photo__more {
  display: flex;
  justify-content: space-between;
}
.photo__actions {
  display: flex;
  justify-content: flex-end;
  align-self: flex-end;
  flex: 1;
}
.avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 1px solid #e58c8a;
}
.avatar + .avatar {
  transform: translateX(-30%);
}
.photo__actions__comment {
  margin-left: 1em;
}
.photo__meta {
  width: 100%;
  padding: 12px;
  display: flex;
  align-items: center;
}
.photo__author__avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.photo__author__name {
  font-size: .7em;
  margin-left: 6px;
}

.upload {
  position: fixed;
  bottom: 20px;
  width: 70px;
  height: 70px;
  color: #fff;
  background: rgb(252, 175, 6);
  background-color: #eec0c6;
  background-image: linear-gradient(315deg, #eec0c6 0%, #e58c8a 74%);
  background-color: #d9e4f5;
  background-image: linear-gradient(315deg, #d9e4f5 0%, #f5e3e6 74%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 2em;
  line-height: 0;
  border: 2px solid #fff;
  box-shadow: 0 0 6px #eee;
