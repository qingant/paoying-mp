.comments {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.comments__list {
  padding: 15px;
  padding-bottom: 100px;
}
.comment__author {
  color: #f9d1b7;
  margin-right: .5em;
}
.comments__box {
  background-color: #d9e4f5;
}
.comments__box input {
