.photo__meta,
.photo__footer {
  width: 100%;
  box-sizing: border-box;
  padding: 0 15px;
  position: absolute;
  left: 0;
  right: 0;
}
.photo__meta {
  top: 0;
  color: #fff;
  background: linear-gradient(to bottom, rgba(0,0,0,.5) 20%, rgba(0,0,0,0));
}
.photo__meta__distance {
  font-size: .6em;
}
.photo__footer {
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0) 20%, rgba(0,0,0,.8));
}

.photo__image,
.photo__image navigator,
.photo__more,
.photo__desc {
  width: 100%;
}
.photo__desc__distance {
  font-size: .7em;
  color: #fff;
}
.photo__image navigator {
  display: flex;
  justify-content: center;
  align-items: center;
}
.photo__image image {
  width: 100%;
  min-height: 300px;
}
.photo__desc {
  padding: .5em 0;
  color: #fff;
  font-size: .8em;
}
.photo__footer {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.photo__more {
  display: flex;
  justify-content: space-between;
}
.photo__actions {
  display: flex;
  justify-content: flex-end;
  align-self: flex-end;
  flex: 1;
}
.photo__actions__like {
  display: flex;
}
.photo__likeCount {
  color: #fff;
  font-size: .7em;
  margin-left: .5em;
}
.avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 1px solid #e58c8a;
}
.avatar + .avatar {
  transform: translateX(-30%);
}
.photo__actions__comment {
  margin-left: 1em;
}
.photo__meta {
  width: 100%;
  padding: 12px;
  display: flex;
  align-items: center;
}
.photo__author__avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 6px;
}
.photo__author__name {
  font-size: .7em;
}
